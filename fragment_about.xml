            android:layout_marginTop="40dp"
            android:layout_marginEnd="194dp"
            android:layout_marginRight="194dp"
            android:gravity="center"
            android:text="1710kraman@gmail.com"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.319"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usernameabout" />

        <TextView
            android:id="@+id/userphoneabout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="159dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="194dp"
            android:layout_marginRight="194dp"
            android:gravity="center"
            android:text="7042527546"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.319"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usergmailabout" />

        <TextView
            android:id="@+id/usergenderabout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="194dp"
            android:layout_marginRight="194dp"
            android:gravity="center"
            android:text="Mail"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.319"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userphoneabout" />

        <TextView
            android:id="@+id/userocupationabout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="159dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="194dp"
            android:layout_marginRight="194dp"
            android:gravity="center"
            android:text="Manufacturer"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.319"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usergenderabout" />

        <TextView
            android:id="@+id/loginpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:text="Goto Login Page"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.319"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userocupationabout" />






    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>